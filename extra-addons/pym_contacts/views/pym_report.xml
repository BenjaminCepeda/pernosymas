<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="a5_low_margin" model="report.paperformat">
            <field name="name">A5 Low margin Format</field>
            <field name="default" eval="True"/>
            <field name="format">A5</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="pre_printed_invoice" model="ir.actions.report">
            <field name="name">Factura Pre-impresa</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pym_contacts.report_invoice</field>
            <field name="report_file">pym_contacts.report_invoice</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="pym_contacts.a5_low_margin" />
        </record>
    <template id="custom_header">
        <div>
            <div class="row">
                <div class="col-1" style="padding-left: 0px;width: 100mm;"/>
                <div class="col-4" style="padding-left: 0px;width: 600mm;">
                        <span t-field="o.invoice_date"/>
                </div>
                <div class="col-1" style="padding-left: 0px;width: 250mm;"/>
                <div class="col-4" style="padding-left: 0px;width: 300mm;">
                        <span t-field="o.partner_id.vat"/>
                </div>
            </div>
            <div class="row">
                <div class="col-1" style="padding-left: 0px;width: 100mm;"/>
                <div class="col-8" style="padding-left: 0px;width: 1200mm;">
                        <span t-field="o.partner_id.name"/>
                </div>
            </div>
            <div class="row">
                <div class="col-1" style="padding-left: 0px;width: 150mm;"/>
                <div  style="padding-left: 0px;width: 700mm;">
                    <span t-field="o.partner_id.street"/><span t-field="o.partner_id.street2"/>
                </div>
                <div class="col-1" style="padding-left: 0px;width: 100mm;"/>
                <div style="padding-left: 0px;width: 300mm;">
                    <span t-field="o.partner_id.phone"/><span t-field="o.partner_id.mobile"/>
                </div>
            </div>
        </div>
        <br/>
    </template>

        <template id="report_pre_printed_invoice" inherit_id="account.report_invoice_document" primary="True">
            <t t-set="o" position="after">
            <t t-set="custom_header" t-value="'pym_contacts.custom_header'"/>
            <br/>
            </t>
            <t t-set="address" position="replace"/>

            <!-- remove default document title -->
            <h2 position="replace"/>

        </template>
    <!-- FIXME: Temp fix to allow fetching invoice_documemt in Studio Reports with localisation -->
    <template id="report_invoice" inherit_id="account.report_invoice">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="replace">
            <t
                t-call="pym_contacts.report_pre_printed_invoice" t-lang="lang"/>
        </xpath>
    </template>
    </data>
</odoo>
